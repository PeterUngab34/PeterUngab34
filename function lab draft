import javax.swing.*;
import java.util.Scanner;

public class GeometricCalculations {

    public static double calculateCircleArea(double radius) {
        return Math.PI * Math.pow(radius, 2);
    }

    public static double calculateRectangleArea(double length, double width) {
        return length * width;
    }

    public static double calculateTriangleArea(double base, double height) {
        return 0.5 * base * height;
    }

    public static double calculateSphereVolume(double radius) {
        return (4.0 / 3.0) * Math.PI * Math.pow(radius, 3);
    }

    public static double calculateSphereSurfaceArea(double radius) {
        return 4 * Math.PI * Math.pow(radius, 2);
    }

    public static double calculateTriangleSide(double a, double b, double angleC) {
        return Math.sqrt(Math.pow(a, 2) + Math.pow(b, 2) - 2 * a * b * Math.cos(Math.toRadians(angleC)));
    }

    public static double calculateCircleSegmentArea(double radius, double angle) {
        return (Math.pow(radius, 2) / 2) * (Math.toRadians(angle) - Math.sin(Math.toRadians(angle)));
    }

    public static void main(String[] args) {
        String[] options = {
            "Circle Area", "Rectangle Area", "Triangle Area",
            "Sphere Volume", "Sphere Surface Area", 
            "Third Side of Triangle", "Circle Segment Area"
        };

        String choice = (String) JOptionPane.showInputDialog(
            null,
            "Select the calculation:",
            "Geometric Calculations",
            JOptionPane.PLAIN_MESSAGE,
            null,
            options,
            options[0]
        );

        if (choice == null) {
            JOptionPane.showMessageDialog(null, "No selection made. Exiting.");
            System.exit(0);
        }

        switch (choice) {
            case "Circle Area":
                double circleRadius = Double.parseDouble(JOptionPane.showInputDialog("Enter the radius of the circle:"));
                JOptionPane.showMessageDialog(null, "Circle Area: " + calculateCircleArea(circleRadius));
                break;

            case "Rectangle Area":
                double length = Double.parseDouble(JOptionPane.showInputDialog("Enter the length of the rectangle:"));
                double width = Double.parseDouble(JOptionPane.showInputDialog("Enter the width of the rectangle:"));
                JOptionPane.showMessageDialog(null, "Rectangle Area: " + calculateRectangleArea(length, width));
                break;

            case "Triangle Area":
                double base = Double.parseDouble(JOptionPane.showInputDialog("Enter the base of the triangle:"));
                double height = Double.parseDouble(JOptionPane.showInputDialog("Enter the height of the triangle:"));
                JOptionPane.showMessageDialog(null, "Triangle Area: " + calculateTriangleArea(base, height));
                break;

            case "Sphere Volume":
                double sphereRadius = Double.parseDouble(JOptionPane.showInputDialog("Enter the radius of the sphere:"));
                JOptionPane.showMessageDialog(null, "Sphere Volume: " + calculateSphereVolume(sphereRadius));
                break;

            case "Sphere Surface Area":
                double sphereSurfaceRadius = Double.parseDouble(JOptionPane.showInputDialog("Enter the radius of the sphere:"));
                JOptionPane.showMessageDialog(null, "Sphere Surface Area: " + calculateSphereSurfaceArea(sphereSurfaceRadius));
                break;

            case "Third Side of Triangle":
                double sideA = Double.parseDouble(JOptionPane.showInputDialog("Enter the first side of the triangle:"));
                double sideB = Double.parseDouble(JOptionPane.showInputDialog("Enter the second side of the triangle:"));
                double angleC = Double.parseDouble(JOptionPane.showInputDialog("Enter the angle between the two sides (in degrees):"));
                JOptionPane.showMessageDialog(null, "Third Side: " + calculateTriangleSide(sideA, sideB, angleC));
                break;

            case "Circle Segment Area":
                double segmentRadius = Double.parseDouble(JOptionPane.showInputDialog("Enter the radius of the circle segment:"));
                double segmentAngle = Double.parseDouble(JOptionPane.showInputDialog("Enter the angle of the segment (in degrees):"));
                JOptionPane.showMessageDialog(null, "Circle Segment Area: " + calculateCircleSegmentArea(segmentRadius, segmentAngle));
                break;

            default:
                JOptionPane.showMessageDialog(null, "Invalid choice!");
        }
    }
}
